<%- include ("../public/top") %>


<div class="container-fluid">
    <div class="row">
        <%- include ("../public/left") %>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">商品管理
                </li>
                <li class="active">商品列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>名称</th>
                            <th>图片</th>


                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                            <% for(let i  in  types){ %>
                        <tr>
                            <td><%= types[i]._id%></td>
                            <td><%= types[i].typename%></td>
                   
                            <td><image src="/<%= types[i].typepic%>"  alt="暂无图片" width="50px"  height="50px"></td>

                            <td class="text-center">
                                <a href="/type/doDel?id=<%= types[i]._id %>&typepic=<%= types[i].typepic %>">删除</a>
                                <a href="/type/Edit?id=<%= types[i]._id %>&typename=<%= types[i].typename %>">修改</a>

                            </td>
                        </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

</body>

</html>